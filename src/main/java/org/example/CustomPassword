package org.example;

public class CustomPassword {
    private String name;
    private int exactLength;
    private int maxConsecutiveCharactersAllowed;
    private int maxLength;
    private int minimumLength;
    private boolean isContainUsernameAllowed;
    private boolean isCapitalLetterRequired;
    private boolean isLowerLetterRequired;
    private boolean isUniqueCharacterRequired;

    //int maxLength
    public CustomPassword(String name,int exactLength,int maxConsecutiveCharactersAllowed, int maxLength,
                          int minimumLength, boolean isContainUsernameAllowed, boolean isCapitalLetterRequired,
                          boolean isLowerLetterRequired, boolean isUniqueCharacterRequired) {
        this.name=name;
        this.exactLength=exactLength;
        this.maxConsecutiveCharactersAllowed = maxConsecutiveCharactersAllowed;
        this.isContainUsernameAllowed = isContainUsernameAllowed;
        this.maxLength = maxLength;
        this.minimumLength = minimumLength;
        this.isCapitalLetterRequired = isCapitalLetterRequired;
        this.isLowerLetterRequired = isLowerLetterRequired;
        this.isUniqueCharacterRequired = isUniqueCharacterRequired;
    }
    public String getName(){return name;}
    public int getExactLength(){return exactLength;}
    public int getMaxConsecutiveCharactersAllowed() {return maxConsecutiveCharactersAllowed;}
    public int getMaxLength() {return maxLength;}
    public int getMinimumLength() {return minimumLength;}
    public boolean isContainUsernameAllowed() {return isContainUsernameAllowed;}
    public boolean isCapitalLetterRequired() {return isCapitalLetterRequired;}
    public boolean isLowerLetterRequired() {return isLowerLetterRequired;}
    public boolean isUniqueCharacterRequired() {return isUniqueCharacterRequired;}

    public void setName(String name){this.name=name;}
    public void setExactLength(int exactLength){this.exactLength=exactLength;}
    public void setMaxConsecutiveCharactersAllowed(int maxConsecutiveCharactersAllowed) {this.maxConsecutiveCharactersAllowed = maxConsecutiveCharactersAllowed;}
    public void setMaxLength(int maxLength) {this.maxLength = maxLength;}
    public void setMinimumLength(int minimumLength) {this.minimumLength = minimumLength;}
    public void setIsContainUsernameAllowed(boolean isContainUsernameAllowed) {this.isContainUsernameAllowed = isContainUsernameAllowed;}
    public void setIsCapitalLetterRequired(boolean isCapitalLetterRequired) {this.isCapitalLetterRequired = isCapitalLetterRequired;}
    public void setIsLowerLetterRequired(boolean isLowerLetterRequired) {this.isLowerLetterRequired = isLowerLetterRequired;}
    public void setIsUniqueCharacterRequired(boolean isUniqueCharacterRequired) {this.isUniqueCharacterRequired = isUniqueCharacterRequired;}

    @Override
    public String toString() {
        return "CustomPassword{" +
                "maxConsecutiveCharactersAllowed=" + maxConsecutiveCharactersAllowed +
                ", isContainUsernameAllowed=" + isContainUsernameAllowed +
                ", maxLength=" + maxLength +
                ", minimumLength=" + minimumLength +
                ", isCapitalLetterRequired=" + isCapitalLetterRequired +
                ", isLowerLetterRequired=" + isLowerLetterRequired +
                ", isUniqueCharacterRequired=" + isUniqueCharacterRequired +
                '}';
    }

}
